import turtle
import math

# --- Setup ---
screen = turtle.Screen()
screen.bgcolor("black")
screen.title("Circle Revolution Counter")

pen = turtle.Turtle()
pen.hideturtle()
pen.speed(0)
pen.color("white")

circles = []
num_circles = 20
radius = 100

# Create 20 small circle markers
for i in range(num_circles):
    c = turtle.Turtle()
    c.shape("circle")
    c.color("cyan")
    c.penup()
    c.speed(0)
    circles.append(c)

angle = 0
revolutions = 0
tally = 0

# --- Main loop ---
while True:
    # Update circle positions
    for i, c in enumerate(circles):
        theta = angle + (i * (360 / num_circles))
        x = radius * math.cos(math.radians(theta))
        y = radius * math.sin(math.radians(theta))
        c.goto(x, y)
    
    # Increment angle
    angle += 5
    if angle >= 360:
        angle = 0
        revolutions += 1
        print(f"Revolution: {revolutions}")

        # Every 5 revolutions, add a tally
        if revolutions % 5 == 0:
            tally += 1
            pen.clear()
            pen.goto(-20, 150)
            pen.write(f"Tallies: {tally}", align="left", font=("Arial", 18, "bold"))
    
    # Control animation speed
    screen.update()